@{
    ViewBag.Title = "Create";
}

<h2>Create Product</h2>

<form action="" class="form-group" method="post">
    <label for="Id">Enter Product Id :</label>
    <br />
    <input type="number" value="@(Model != null ? @Model.Id : "")" name="Id" id="Id"/>
    <br />
    @Html.ValidationMessage("Id",new {@class="text-danger"})
    <br />
    <br />
    <label for="ProductName">Enter Product Name :</label>
    <br />
    <input type="text" value="@(Model != null ? @Model.ProductName : "")" name="ProductName" id="ProductName" />
    <br />
    @Html.ValidationMessage("ProductName", new { @class = "text-danger" })
    <br />
    <br />
    <label for="Price">Enter Product Price :</label>
    <br />
    <input type="number" value="@(Model != null ? @Model.Price : "")" name="Price" id="Price" />
    <br />
    @Html.ValidationMessage("Price", new { @class = "text-danger" })
    <br />
    <br />
    <input type="submit" class="btn btn-info"/>
    <br />
</form>
